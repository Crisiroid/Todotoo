@model todotoo.Models.User
@{
    ViewBag.Title = "ManageAssignment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Tasks</h2>
<a class="btn btn-success" href="/UserPanel/CreateTask/@Model.UserID">Create a new task</a>
<table class="table table-striped table-bordered">
    <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Priority</th>
        <th>Status</th>
    </tr>
    @foreach(var item in Model.tasks)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.Priority</td>
                    <td>@item.Status</td>
                </tr>
            }
</table>