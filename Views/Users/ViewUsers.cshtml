@model IEnumerable<todotoo.Models.User>

@{
    ViewBag.Title = "User Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card">
    <div class="card-header bg-primary text-white">
        Users List
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Create New", "Create", new { @class = "btn btn-success" })
        </p>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Username)</th>
                        <th>@Html.DisplayNameFor(model => model.Password)</th>
                        <th>@Html.DisplayNameFor(model => model.Email)</th>
                        <th>@Html.DisplayNameFor(model => model.LastActiveDate)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Username)</td>
                            <td>@Html.DisplayFor(modelItem => item.Password)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.LastActiveDate)</td>
                            <td>
                                <div class="btn-group">
                                    @Html.ActionLink("Edit", "Edit", new { id = item.UserID }, new { @class = "btn btn-outline-primary btn-sm" })
                                    @Html.ActionLink("Details", "Details", new { id = item.UserID }, new { @class = "btn btn-outline-info btn-sm" })
                                    @Html.ActionLink("Delete", "Delete", new { id = item.UserID }, new { @class = "btn btn-outline-danger btn-sm" })
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <br />
        <a class="btn btn-danger" href="/Users/Index">Return to Control Panel</a>
    </div>
</div>
