@model IEnumerable<todotoo.Models.Content>
@{
    ViewBag.Title = "ViewContents";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Content List
    </div>
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Title</td>
                    <td>@item.body</td>
                    <td>@item.Created</td>
                    <td><a class="btn btn-danger" href="/Users/DeleteContent/@item.Id">Delete</a></td>
                </tr>
            }
        </table>

        <br />
        <a class="btn btn-danger" href="/Users/Index">Back to Panel</a>
        
    </div>

</div>

